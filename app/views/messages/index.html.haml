.wrapper
  = render partial: "groups/left-content"
  .right-content
    .message__header
      .message__header__name
        = @group.name
      = link_to 'Edit', edit_group_path(@group), class: 'edit'
      .message__header__members
        member:
        = @users.pluck(:name).join(" ")
    .message__body
      = render @messages
    .message__footer
      = form_for ([@group,@message]) do |f|
        = f.text_field :body, class: "type", placeholder: :"type a message"
        = f.submit "Send", class: "send"
        = fa_icon 'file-photo-o'
